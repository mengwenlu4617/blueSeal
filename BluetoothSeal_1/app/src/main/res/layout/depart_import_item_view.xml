<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_60dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_padding_15dp"
        android:paddingRight="@dimen/margin_padding_15dp">

        <CheckBox
            android:id="@+id/depart_import_item_cb"
            android:layout_width="@dimen/view_size_20dp"
            android:layout_height="@dimen/view_size_20dp"
            android:background="@drawable/check_select_bg"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <com.bjzhijian.bluetoothseal.intelligentseal.widgets.MTextView
            android:id="@+id/depart_import_item_tvName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

</LinearLayout>
