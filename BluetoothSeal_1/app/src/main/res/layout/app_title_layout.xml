<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_toolbar_height"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/title_left_layout"
            android:layout_width="@dimen/toolbar_layout_width"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/title_left_image"
                android:layout_width="@dimen/toolbar_image_width"
                android:layout_height="@dimen/toolbar_image_width"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/empty"
                android:padding="10dp"
                android:src="@mipmap/icon_back"
                android:visibility="visible" />

            <com.bjzhijian.bluetoothseal.intelligentseal.widgets.MTextView
                android:id="@+id/title_left_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/empty"
                android:textColor="@color/gray_333"
                android:textSize="@dimen/text_16sp"
                android:visibility="gone" />
        </FrameLayout>

        <com.bjzhijian.bluetoothseal.intelligentseal.widgets.MTextView
            android:id="@+id/title_center_text"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/title_right_layout"
            android:layout_width="@dimen/toolbar_layout_width"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/title_right_image"
                android:layout_width="@dimen/toolbar_image_width"
                android:layout_height="@dimen/toolbar_image_width"
                android:layout_gravity="center_vertical|right"
                android:contentDescription="@string/empty"
                android:padding="10dp"
                android:src="@mipmap/icon_zxing"
                android:visibility="gone" />

            <com.bjzhijian.bluetoothseal.intelligentseal.widgets.MTextView
                android:id="@+id/title_right_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/empty"
                android:textColor="@color/gray_333"
                android:textSize="@dimen/text_16sp"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <View style="@style/divider_style" />
</LinearLayout>
