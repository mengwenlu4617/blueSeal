<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_50dp"
        android:background="@drawable/item_click_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/my_item_img"
            android:layout_width="@dimen/view_size_50dp"
            android:layout_height="@dimen/view_size_50dp"
            android:contentDescription="@string/empty"
            android:padding="@dimen/margin_padding_10dp"
            android:src="@mipmap/icon_use_record" />

        <com.bjzhijian.bluetoothseal.intelligentseal.widgets.MTextView
            android:id="@+id/my_item_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:id="@+id/my_item_rightImg"
            android:layout_width="@dimen/view_size_45dp"
            android:layout_height="@dimen/view_size_45dp"
            android:contentDescription="@string/empty"
            android:padding="@dimen/margin_padding_15dp"
            android:src="@mipmap/icon_go" />
    </LinearLayout>

    <View
        android:id="@+id/my_item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_5dp"
        android:background="@color/background"
        android:visibility="gone" />

</LinearLayout>
